# Dan's handy aliases
if _command_exists ack-grep; then
    alias ack='ack-grep'
fi

# put some colour in your ls (not for BSD ls - ie macOS etc)
case $OSTYPE in
linux-gnu)
    alias ls='ls --color=always'
esac

# some more ls aliases
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# some people don't have ack
alias ack='ack-grep'

# cd should help not hinder
alias cd..='cd ..'
alias ..='cd ..'

# gragh always ps aux
alias pa='ps aux'

# display the working directory 
alias .='echo $PWD'

#Â vim -> neovim
if type "nvim" > /dev/null; then
    alias vim='nvim'
    alias vi='nvim'
fi
